<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_food_img"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/quick_recyclerview_img_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restrant_name"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="한독대 김치찜 장안점점"
        android:textColor="@color/black"
        android:fontFamily="@font/bmjua_ttf"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/main_food_img"
        app:layout_constraintTop_toBottomOf="@+id/main_food_img"/>

    <TextView
        android:id="@+id/deliver_tip"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="배달팁"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/restrant_name"
        app:layout_constraintStart_toStartOf="@+id/restrant_name"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/deliver_fee"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="3,000원"
        android:textSize="17dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/deliver_tip"
        app:layout_constraintTop_toBottomOf="@+id/restrant_name"
        android:layout_marginTop="3dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bm1_time_bar"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:background="@drawable/main_bm1_chip_bg"
        app:layout_constraintStart_toStartOf="@id/deliver_tip"
        app:layout_constraintTop_toBottomOf="@id/deliver_tip"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/bm1_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/main_bm1_img" />

        <TextView
            android:id="@+id/main_bm1_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14~24분"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="7dp"
            android:textColor="@color/black"/>





    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/main_star"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:adjustViewBounds="true"
        android:src="@drawable/main_star"
        app:layout_constraintStart_toEndOf="@id/bm1_time_bar"
        app:layout_constraintTop_toBottomOf="@+id/restrant_name"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/star_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.0"
        android:textColor="@color/black"
        android:textSize="19dp"
        app:layout_constraintStart_toEndOf="@+id/restrant_name"
        app:layout_constraintTop_toBottomOf="@+id/restrant_name"
        android:layout_marginTop="2dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>