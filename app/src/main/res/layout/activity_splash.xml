<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">


    <TextView
        android:id="@+id/bm_splash_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="의"
        android:textSize="45dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/bmjua_ttf"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/bm_splash_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배달"
        android:textSize="65dp"
        android:textColor="@color/black"
        android:fontFamily="@font/bmjua_ttf"
        app:layout_constraintEnd_toStartOf="@+id/bm_splash_center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/bm_splash_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="민족"
        android:textSize="65dp"
        android:textColor="@color/black"
        android:fontFamily="@font/bmjua_ttf"
        app:layout_constraintStart_toEndOf="@+id/bm_splash_center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/bm_splash_korea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대한민국"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bm_splash_delivery"
        app:layout_constraintEnd_toEndOf="@+id/bm_splash_delivery"/>

    <TextView
        android:id="@+id/bm_splash_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배달어플"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bm_splash_people"
        app:layout_constraintStart_toStartOf="@+id/bm_splash_people"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/bm_splashjpg_1"
        app:layout_constraintStart_toEndOf="@+id/bm_splash_korea"
        app:layout_constraintEnd_toStartOf="@+id/bm_splash_app"
        app:layout_constraintBottom_toTopOf="@id/bm_splash_center"
        android:layout_marginBottom="11dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="25dp"
        android:src="@drawable/bm_splash_logo"/>






</androidx.constraintlayout.widget.ConstraintLayout>